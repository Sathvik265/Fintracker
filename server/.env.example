# Backend Environment Variables
# Copy this file to .env and update the values for production

# MongoDB Connection String (use your MongoDB Atlas URL)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/fintrack?retryWrites=true&w=majority

# Server Port (Render will set this automatically)
PORT=8080

# Frontend URL (for CORS - use your Render static site URL)
FRONTEND_URL=https://your-frontend.onrender.com
